# ─── Google ───────────────────────────────────────────────────────────────────
# Your Google Sheet ID (from the URL: docs.google.com/spreadsheets/d/THIS_PART/edit)
GOOGLE_SHEET_ID=REPLACE_WITH_YOUR_GOOGLE_SHEET_ID

# Your Gmail address (used to SEND notification emails)
USER_EMAIL=you@gmail.com

# Path to the Google OAuth credentials JSON you download from Google Cloud Console
GOOGLE_CREDENTIALS_PATH=credentials.json

# ─── Resume ───────────────────────────────────────────────────────────────────
# Google Drive share link to your resume (make sure it's set to "Anyone with link")
RESUME_URL=https://drive.google.com/file/d/YOUR_RESUME_ID/view

# Absolute path to resume PDF on your local machine (used for browser upload)
RESUME_LOCAL_PATH=C:\Users\YourName\Documents\resume.pdf

# ─── LinkedIn ─────────────────────────────────────────────────────────────────
LINKEDIN_EMAIL=your_linkedin_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password

# ─── Indeed ───────────────────────────────────────────────────────────────────
INDEED_EMAIL=your_indeed_email@example.com
INDEED_PASSWORD=your_indeed_password

# ─── Scheduler ────────────────────────────────────────────────────────────────
# Time to apply each weekday morning (24h format, your local time)
APPLY_HOUR=9
APPLY_MINUTE=0

# How often (in days) to check status of applied jobs
STATUS_CHECK_INTERVAL_DAYS=2
STATUS_CHECK_HOUR=10

# ─── Behaviour ────────────────────────────────────────────────────────────────
# Set to true to log actions without actually applying — safe for testing!
DRY_RUN=false

# Max jobs to apply to per run (safety limit)
MAX_APPLICATIONS_PER_RUN=5
